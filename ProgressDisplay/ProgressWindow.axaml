<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ProgressDisplay.ProgressWindow"
        Width="360"
        Height="200"
        Title="Процесс">
  <Grid RowDefinitions="Auto,Auto,Auto,*" Margin="16" RowSpacing="12">
    <TextBlock TextWrapping="Wrap" Text="{Binding Caption}" FontSize="16" />
    <ProgressBar Grid.Row="1"
                 Minimum="0"
                 Maximum="{Binding ProgressMaximum}"
                 Value="{Binding ProgressValue}"
                 Height="24" />
    <TextBlock Grid.Row="2" TextWrapping="Wrap" Text="{Binding Details}" />
    <Button Grid.Row="3"
            HorizontalAlignment="Right"
            Width="120"
            Height="32"
            Content="{Binding CancelButtonText}"
            IsEnabled="{Binding IsCancelEnabled}"
            Click="OnCancelClicked" />
  </Grid>
</Window>
